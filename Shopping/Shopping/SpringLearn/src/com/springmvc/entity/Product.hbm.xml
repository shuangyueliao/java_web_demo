<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.springmvc.entity.Product" table="product">
		<id name="id" column="id">
			<generator class="native"></generator>
		</id>
		<property name="name" column="name" length="100" type="java.lang.String"></property>
		<property name="price" column="price" type="java.lang.Double"></property>
		<property name="imagePath" column="imagePath" length="100" type="java.lang.String"></property>
	</class>
	
</hibernate-mapping>